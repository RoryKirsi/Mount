<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MountAssistance.Feedback">
	<ContentPage.Content>
		<StackLayout Padding="0,50,0,0" Spacing="20" VerticalOptions="FillAndExpand"> 			<StackLayout Orientation="Horizontal" Spacing="20"> 				<Label Text="First Name:"/> 				<Entry  HorizontalOptions="FillAndExpand"/> 			</StackLayout> 			<StackLayout Orientation="Horizontal" Spacing="20"> 				<Label Text="Last Name:"/> 				<Entry  HorizontalOptions="FillAndExpand"/> 			</StackLayout> 			<StackLayout Orientation="Horizontal" Spacing="20"> 				<Label Text="Email:"/> 				<Entry HorizontalOptions="FillAndExpand"/> 			</StackLayout> 			<StackLayout Orientation="Horizontal" Spacing="20"> 				<Label Text="Phone:"/> 				<Entry  HorizontalOptions="FillAndExpand"/> 			</StackLayout> 			<StackLayout Orientation="Horizontal" Spacing="20"> 				<Label Text="Score(1-100):"/> 				<Slider HorizontalOptions="FillAndExpand" /> 			</StackLayout> 			<StackLayout Orientation="Vertical" Spacing="20"> 				<Label Text="Advise" /> 				<Editor HorizontalOptions="FillAndExpand" BackgroundColor="Silver" TextColor="White" HeightRequest="100"/>  			</StackLayout> 			<Grid> 				<Grid.RowDefinitions>         			<RowDefinition Height="*" />    				</Grid.RowDefinitions> 				<Grid.ColumnDefinitions> 					<ColumnDefinition Width="*" /> 					<ColumnDefinition Width="*" /> 					<ColumnDefinition Width="*" /> 				</Grid.ColumnDefinitions> 				<Button Text="Reset" BackgroundColor="Olive" TextColor="White" Grid.Row="0" Grid.Column="0"/> 				<Button Text="Submit" BackgroundColor="Olive" TextColor="White" Grid.Row="0" Grid.Column="1"/> 				<Button Text="Return" BackgroundColor="Olive" TextColor="White" Grid.Row="0" Grid.Column="2" Clicked="NavigateToHome"/> 			</Grid> 		</StackLayout>
	</ContentPage.Content>
</ContentPage>
